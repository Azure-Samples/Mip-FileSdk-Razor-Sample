@page
@model MipSdkRazorSample.Pages.EmployeeData.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<form method="post">
        <input type="submit" value="Export" asp-page-handler="Export"/>
</form>


<!-- Show label that will be applied to downloaded files. -->
<h4>
    <label> Label for Downloaded Files:</label>
    <b>@Html.DisplayFor(modelItem => Model.MipLabel.Where(m => m.Id == Model.DataPolicy.MinLabelIdForAction).First().Name)</b>
</h4>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Employees[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employees[0].Surname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employees[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employees[0].DateOfBirth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employees[0].HireDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employees[0].Salary)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Employees) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfBirth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HireDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Salary)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

